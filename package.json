{
  "name": "npc-bot",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "bun run --watch dist/index.js",
    "dev:ts": "bun run build && bun run dev",
    "dev:sharded": "bun run build && bun run --watch dist/shardManager.js",
    "start": "node dist/index.js",
    "start:sharded": "node dist/shardManager.js",
    "start:pm2": "pm2 start dist/shardManager.js --name npc-bot",
    "start:pm2:dev": "pm2 start dist/shardManager.js --name npc-bot-dev --watch",
    "stop:pm2": "pm2 stop npc-bot",
    "restart:pm2": "pm2 restart npc-bot",
    "delete:pm2": "pm2 delete npc-bot",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "chalk": "^5.6.2",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.2",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "discord-api-types": "^0.38.26",
    "pm2": "^5.3.0",
    "prettier": "^3.6.2",
    "sequelize-typescript": "^2.1.6",
    "typescript": "^5.9.2"
  }
}
